/* pages/script-detail/script-detail.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 通用头部样式 */
.page-header,
.detail-header {
  padding: 10px 20px;
  background: white;
}

.back-button {
  display: flex;
  align-items: center;
  gap: 5px;
}

.back-icon {
  font-size: 24px;
  color: #333;
}

.back-text {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 剧本列表页面 */
.script-list-page {
  background: white;
}

/* 正在追区域 */
.current-script {
  padding: 20px;
  background: white;
  border-bottom: 10px solid #f5f5f5;
}

.section-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
}

.current-script-card {
  display: flex;
  background: #f8f9fa;
  border-radius: 12px;
  padding: 15px;
  align-items: center;
  gap: 15px;
}

.current-cover {
  width: 60px;
  height: 60px;
  border-radius: 8px;
}

.current-info {
  flex: 1;
}

.current-title {
  display: block;
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.current-progress {
  font-size: 14px;
  color: #666;
}

/* 推荐区域 */
.recommended-section {
  padding: 20px;
  background: white;
}

.scripts-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

.script-card {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.script-cover-container {
  position: relative;
}

.script-cover {
  width: 100%;
  height: 120px;
  background: #f0f0f0;
}

.follower-tag {
  position: absolute;
  top: 8px;
  left: 8px;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 10px;
}

.script-info {
  padding: 12px;
}

.script-title {
  display: block;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.script-meta {
  font-size: 12px;
  color: #999;
}

/* 剧本详情页面 */
.script-detail-page {
  background: #333;
  min-height: 100vh;
  color: white;
  padding-bottom: 80px;
}

.detail-header {
  background: transparent;
  padding: 15px 20px;
}

.detail-header .back-icon,
.detail-header .back-text {
  color: white;
}

/* 剧本标题区域 */
.script-title-section {
  padding: 0 20px 20px;
  display: flex;
  align-items: center;
  gap: 15px;
}

.script-avatar {
  width: 60px;
  height: 60px;
  border-radius: 8px;
}

.title-info {
  flex: 1;
}

.main-title {
  display: block;
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}

.progress-info {
  font-size: 14px;
  opacity: 0.8;
}

/* 章节内容 */
.chapter-content {
  background: rgba(255, 255, 255, 0.1);
  margin: 20px;
  border-radius: 12px;
  padding: 20px;
  min-height: 400px;
}

.chapter-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}

/* 内容显示区域 */
.content-display {
  margin-bottom: 30px;
  position: relative;
}

/* 视频组件样式 */
.chapter-video {
  width: 100%;
  height: 200px;
  border-radius: 8px;
  background: #000;
  display: block;
  margin: 0 auto;
  transition: none; /* 移除过渡效果，避免全屏时闪烁 */
}

.chapter-image {
  width: 100%;
  max-height: 300px;
  border-radius: 8px;
}

.chapter-text {
  display: block;
  font-size: 16px;
  line-height: 1.6;
  text-align: justify;
}

/* 选择选项 */
.choices-section {
  margin-top: 30px;
}

.choice-prompt {
  display: block;
  font-size: 16px;
  margin-bottom: 20px;
  text-align: center;
}

.choices-container {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.choice-button {
  background: rgba(255, 255, 255, 0.2);
  border: 2px solid transparent;
  border-radius: 8px;
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s;
}

.choice-button.selected {
  border-color: #409EFF;
  background: rgba(64, 158, 255, 0.2);
}

.choice-text {
  font-size: 14px;
}

.choice-cost {
  font-size: 16px;
  font-weight: bold;
  color: #FFD700;
}

/* 章节选择器 */
.chapter-selector {
  display: flex;
  justify-content: center;
  gap: 10px;
  padding: 20px;
  overflow-x: auto;
}

.chapter-number {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2px solid transparent;
  transition: all 0.3s;
}

.chapter-number.current {
  background: #409EFF;
  border-color: #409EFF;
}

.chapter-number.locked {
  background: rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.5);
}

/* 底部转入按钮 */
.bottom-transfer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.8);
  padding: 20px;
}

.transfer-button {
  width: 100%;
  height: 50px;
  border: none;
  border-radius: 25px;
  font-size: 16px;
  font-weight: bold;
}

.transfer-button.enabled {
  background: #409EFF;
  color: white;
}

.transfer-button.disabled {
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.5);
}

/* 视频错误显示 */
.video-error-fallback {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 20px;
  text-align: center;
  margin: 20px 0;
}

.error-text {
  display: block;
  color: #ff6b6b;
  font-size: 16px;
  margin-bottom: 10px;
}

.video-path {
  display: block;
  color: rgba(255, 255, 255, 0.7);
  font-size: 12px;
  margin-bottom: 15px;
  word-break: break-all;
}

.retry-btn {
  background: #409EFF;
  color: white;
  border: none;
  border-radius: 6px;
  padding: 8px 16px;
  font-size: 14px;
}

/* 文本内容区域 */
.text-content-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 20px;
  margin: 20px 0;
}

.chapter-text {
  display: block;
  font-size: 16px;
  line-height: 1.8;
  color: white;
  text-align: justify;
}

/* 调试信息样式 */
.debug-info {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 10px;
  margin: 10px 0;
}

.debug-text {
  display: block;
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  margin: 2px 0;
  word-break: break-all;
}

.debug-button {
  background: rgba(64, 158, 255, 0.8);
  color: white;
  border: none;
  border-radius: 4px;
  padding: 5px 10px;
  font-size: 12px;
  margin-top: 5px;
}