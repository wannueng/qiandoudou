  border-radius: 10px;
}

.ai-partner-info {
  margin-top: 8px;
}

.partner-label {
  font-size: 12px;
  color: #ffffff;
  opacity: 0.8;
}

.partner-name {
  font-size: 12px;
  color: #ffffff;
  font-weight: 500;
}

.wallet-title {
  font-size: 16px;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 12px;
  line-height: 22px;
}

.wallet-amount {
  margin-top: auto;
  margin-bottom: 8px;
}

.amount-text {
  font-size: 24px;
  font-weight: 600;
  color: #ffffff;
  line-height: 33px;
}

/* 右上角头像样式已移除 */



.wallet-content {
  position: relative;
  z-index: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.wallet-name {
