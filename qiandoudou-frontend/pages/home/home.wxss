.nav-item:not(.active) .pixel-social-icon .extension {
  background: #999;
}

.pixel-social-icon .extension.top {
  top: -4px;
  left: 50%;
  transform: translateX(-50%);
  width: 4px;
  height: 6px;
}

.pixel-social-icon .extension.bottom {
  bottom: -4px;
  left: 50%;
  transform: translateX(-50%);
  width: 4px;
  height: 6px;
}

.pixel-social-icon .extension.left {
  left: -4px;
  top: 50%;
  transform: translateY(-50%);
  width: 6px;
  height: 4px;
}

.pixel-social-icon .extension.right {
  right: -4px;
  top: 50%;
  transform: translateY(-50%);
  width: 6px;
  height: 4px;
}

