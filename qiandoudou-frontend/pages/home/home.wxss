.post-content .transaction-icon {
  font-size: 16px;
}

.post-content .transaction-details {
  flex: 1;
}

.post-content .transaction-desc {
  display: block;
  font-size: 13px;
  color: #666;
  margin-bottom: 2px;
}

.post-content .transaction-amount {
  font-size: 14px;
  font-weight: bold;
}

.post-content .transaction-amount.income {
  color: #67C23A;
}

.post-content .transaction-amount.expense {
