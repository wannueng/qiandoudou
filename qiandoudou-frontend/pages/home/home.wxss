.post-user-info {
  flex: 1;
}

.post-username {
  display: block;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 2px;
}

.post-time {
  font-size: 12px;
  color: #999;
}

.post-content {
  margin-bottom: 12px;
}

.post-text {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
  margin-bottom: 10px;
}

.post-content .transaction-info .transaction-card {
  background: #f8f9fa;
  border-radius: 6px;
  padding: 10px;
  display: flex;
  align-items: center;
  gap: 10px;
