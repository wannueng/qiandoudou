/* pages/home/home.wxss */
.container {
  min-height: 100vh;
  background: #f8f9fa;
}

/* 钱包页面 */
.wallet-page {
  min-height: 100vh;
  background: #f1f2f3;
  padding-bottom: 97px;
}

/* 顶部导航栏 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 48px;
  background: transparent;
  padding: 0 16px;
  position: relative;
  z-index: 10;
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 12px;
}

.back-btn {
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-arrow {
  font-size: 48px;
  color: #000000e6;
  font-weight: 300;
}

.nav-title {
  font-size: 16px;
  font-weight: 600;
  color: #000000e6;
  margin-left: -7px;
}

.nav-right {
  display: flex;
  align-items: center;
  gap: 12px;
}

.user-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar-icon {
  width: 24px;
  height: 24px;
  background: #e6e6e6;
  border-radius: 50%;
  position: relative;
}

.user-avatar-icon::before {
  content: '';
  position: absolute;
  top: 6px;
  left: 50%;
  transform: translateX(-50%);
  width: 8px;
  height: 8px;
  background: #666;
  border-radius: 50%;
}

.user-avatar-icon::after {
  content: '';
  position: absolute;
  bottom: 4px;
  left: 50%;
  transform: translateX(-50%);
  width: 12px;
  height: 6px;
  background: #666;
  border-radius: 6px 6px 0 0;
}

/* 新的通知图标样式（钱兜兜页面） */
.notification-icon-new {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.notification-icon-img {
  width: 24px;
  height: 24px;
}

/* 未读消息红点 */
.unread-badge {
  position: absolute;
  top: 0;
  right: 0;
  min-width: 16px;
  height: 16px;
  background: #ff4757;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid #ffffff;
  box-sizing: border-box;
}

.unread-count {
  font-size: 10px;
  font-weight: 600;
  color: #ffffff;
  line-height: 1;
  padding: 0 3px;
}

/* 保留旧样式以防其他地方使用 */
.notification-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bell-icon {
  width: 20px;
  height: 20px;
  position: relative;
}

.bell-icon::before {
  content: '';
  position: absolute;
  width: 14px;
  height: 14px;
  border: 2px solid #666;
  border-radius: 50% 50% 0 0;
  top: 2px;
  left: 3px;
}

.bell-icon::after {
  content: '';
  position: absolute;
  width: 4px;
  height: 2px;
  background: #666;
  border-radius: 2px;
  bottom: 2px;
  left: 8px;
}

/* 钱包列表区域 */
.wallet-list-section {
  padding: 16px;
  margin-top: 8px;
}

.wallet-card {
  position: relative;
  height: 140px;
  border-radius: 8px;
  padding: 0;
  color: white;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 16px;
}

.wallet-card:last-child {
  margin-bottom: 0;
}

/* 保留原有的主钱包样式用于兼容性 */
.main-wallet-section {
  padding: 16px;
  margin-top: 8px;
}

.main-wallet-card, .no-wallet-card {
  position: relative;
  height: 140px;
  border-radius: 8px;
  padding: 0;
  color: white;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 欢迎区域 */
.welcome-section {
  padding: 16px;
  margin-top: 8px;
}

.welcome-card {
  height: 140px;
  border-radius: 8px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.welcome-title {
  font-size: 20px;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 8px;
  text-align: center;
}

.welcome-desc {
  font-size: 14px;
  color: #ffffff;
  opacity: 0.9;
  text-align: center;
}

.wallet-info {
  padding: 19px;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.wallet-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12px;
}

.wallet-type {
  font-size: 12px;
  color: #ffffff;
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.2);
